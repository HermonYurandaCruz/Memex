<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".TelaCriarConta"
android:background="@color/white">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".NovoContratoCliente">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memex"
        android:textColor="@color/lilas"
        android:textSize="27sp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/memeLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo_memex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/et_usuarioNew"
        style="@style/TextoLogin"
        android:hint="Nome"
        android:layout_marginTop="55dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memeLogo"
        />
    <EditText
        android:id="@+id/et_emailNew"
        style="@style/TextoLogin"
        android:hint="E-mail"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_usuarioNew"
        />
    <EditText
        android:id="@+id/et_senhaNew"
        style="@style/TextoLogin"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_emailNew"/>
    <EditText
        android:id="@+id/et_confirmar_senhaNew"
        style="@style/TextoLogin"
        android:hint="Confirmar Senha"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_senhaNew"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_login"
        android:textSize="12sp"
        android:text="Criar conta"
        android:textColor="@color/white"
        style="@style/BotaoEntrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_confirmar_senhaNew"/>




</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>