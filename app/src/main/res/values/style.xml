<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CaixaNevegacao">
        <item name="android:layout_width">match_parent</item>


    </style>
    <style name="CaixaPesquisa">

        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:background">@drawable/caixa_pesquisar</item>


    </style>
    <style name="barraCriacao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:radius">20dp</item>
        <item name="android:background">@drawable/barra_criacao</item>

    </style>
    <style name="publicacao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:radius">20dp</item>
        <item name="android:background">@drawable/caixa_publicacao</item>

    </style>

    <style name="TextoLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/caixatexto</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="BotaoEntrar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/botao</item>



    </style>


    <style name="BotaoFallow">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">25dp</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/botaofallow</item>




    </style>


    <style name="Pesquisa">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/caixa_pesquisar</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="fotoPerfil">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>

    </style>
    <style name="conteinerPerfil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/conteiner_perfil</item>

    </style>


</resources>