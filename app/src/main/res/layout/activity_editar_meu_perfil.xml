<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarMeuPerfil">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/EditarMeuPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:text="Editar"
        android:textStyle="bold"
        android:textColor="@color/lilas3"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:drawableStart="@drawable/ic_voltar_24"

        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_editarFoto"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/hermon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:civ_border_width="2dp"
        android:layout_marginTop="50dp"
        app:civ_border_color="@color/white"
        />

    <EditText
        android:id="@+id/et_editarNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="editar o nome"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_editarFoto"
        />


    <EditText
        android:id="@+id/et_editarbiografia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Actualizar a Biografia"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_editarNomeUsuario"
        app:layout_constraintStart_toStartOf="parent"
     />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_concluir"
        app:layout_constraintTop_toBottomOf="@id/et_editarbiografia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        style="@style/BotaoEntrar"
        android:text="concluir"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>