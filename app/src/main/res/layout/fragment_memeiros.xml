<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MemeirosFragment"
    android:background="@color/white">



    <TextView
        android:id="@+id/tv_publicacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Usuarios "
        android:textStyle="bold"
        android:textColor="@color/lilas3"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_pesquisar"
        style="@style/Pesquisa"
        android:layout_marginTop="10dp"
        android:hint="  Pesquisar"
        android:inputType="text"
        android:fontFamily="sans-serif-condensed-medium"
        android:drawableRight="@drawable/ic_pesquisar"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_publicacoes" />


    <FrameLayout
        android:id="@+id/conteinerMemeiros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"/>


<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/bt_seguir"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Seguir"
    android:textColor="@color/white"
    style="@style/BotaoFallow"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/et_pesquisar"
    app:layout_constraintEnd_toStartOf="@id/bt_seguindo"
    />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_seguindo"
        style="@style/BotaoFallow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Seguindo"
        android:textColor="@color/white"

        app:layout_constraintStart_toEndOf="@id/bt_seguir"
        app:layout_constraintTop_toBottomOf="@id/et_pesquisar" />


</androidx.constraintlayout.widget.ConstraintLayout>