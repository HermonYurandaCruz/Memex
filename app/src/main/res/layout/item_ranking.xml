<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/usuario"
        style="@style/caixa_usuario"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_perfil_usuarioRanking"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/perfil"
        app:layout_constraintBottom_toBottomOf="@id/usuario"
        app:layout_constraintStart_toEndOf="@+id/tv_lugarRanking"
        app:layout_constraintTop_toTopOf="@id/usuario" />

     <TextView
        android:id="@+id/tv_nomeRanking"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text=""
        android:textColor="@color/pretoTextos"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/iv_perfil_usuarioRanking"
        app:layout_constraintTop_toTopOf="@+id/iv_perfil_usuarioRanking" />


    <TextView
        android:id="@+id/tv_seguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguidores"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_nomeRanking"
        app:layout_constraintTop_toBottomOf="@id/tv_nomeRanking" />

    <TextView
        android:id="@+id/tv_numeroSeguidoresRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/pretoTextos"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_seguir"
        app:layout_constraintEnd_toEndOf="@+id/tv_seguir"
        app:layout_constraintStart_toStartOf="@+id/tv_seguir"
        app:layout_constraintTop_toBottomOf="@+id/tv_nomeRanking" />


    <TextView
        android:id="@+id/tv_numeroDePostagens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicações"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_DeCurtidas"
        app:layout_constraintStart_toEndOf="@+id/tv_seguir"
        app:layout_constraintTop_toBottomOf="@id/tv_nomeRanking" />

    <TextView
        android:id="@+id/tv_numeroPublicacoesRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/pretoTextos"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_numeroDePostagens"
        app:layout_constraintEnd_toEndOf="@+id/tv_numeroDePostagens"
        app:layout_constraintStart_toStartOf="@+id/tv_numeroDePostagens"
        app:layout_constraintTop_toBottomOf="@+id/tv_nomeRanking" />


    <TextView
        android:id="@+id/tv_DeCurtidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curtidas"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nomeRanking"
        app:layout_constraintTop_toTopOf="@+id/tv_seguir" />

    <TextView
        android:id="@+id/tv_numeroDeCurtidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/pretoTextos"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_numeroDePostagens"

        app:layout_constraintEnd_toEndOf="@+id/tv_DeCurtidas"
        app:layout_constraintStart_toStartOf="@+id/tv_DeCurtidas"
        app:layout_constraintTop_toBottomOf="@+id/tv_nomeRanking" />




    <TextView
        android:id="@+id/tv_lugarRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="1"
        android:textColor="@color/lilas"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_perfil_usuarioRanking"
        app:layout_constraintStart_toStartOf="@+id/usuario"
        app:layout_constraintTop_toTopOf="@+id/iv_perfil_usuarioRanking" />

</androidx.constraintlayout.widget.ConstraintLayout>