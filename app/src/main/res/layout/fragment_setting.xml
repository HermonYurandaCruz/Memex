<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingFragment">
    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Setting"
        android:textStyle="bold"
        android:textColor="@color/lilas3"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/def_meuPeriil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/definicoes"
            android:text="   Meu Perfil"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/perfil"
            android:layout_marginTop="16dp"

            />
        <TextView
            android:id="@+id/def_privacidade"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            style="@style/definicoes"
            android:text="   Privacidade"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_privacidade_24"
            />
        <TextView
            android:id="@+id/def_ecentos"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            style="@style/definicoes"
            android:text="   Eventos"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_eventos_24"
            />
        <TextView
            android:id="@+id/def_suporte"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            style="@style/definicoes"
            android:text="   Comunicar um problema"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_problema_24"
            />
        <TextView
            android:id="@+id/def_ajuda"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            style="@style/definicoes"
            android:text="   Ajuda"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_ajuda_24"
            />
        <TextView
            android:id="@+id/def_sobre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            style="@style/definicoes"
            android:text="   Sobre"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/logo_mini"
            />
        <TextView
            android:id="@+id/def_sairdaconta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            style="@style/definicoes"
            android:text="   Terminar SessÃ£o "
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_terminarsessao_24"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/code_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="5dp"/>
            />

        </androidx.constraintlayout.widget.ConstraintLayout>









    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>