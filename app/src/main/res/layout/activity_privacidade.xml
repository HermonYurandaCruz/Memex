<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Privacidade">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Privacidade"
        android:textColor="@color/lilas3"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/actualizar_informacao_pessoal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            style="@style/privacidade"
            android:text="   Actualizar informação pessoal"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/profire_icon"
            />
        <TextView
            android:id="@+id/mudar_senha"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            style="@style/privacidade"
            android:text="   Mudar a senha"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/key_passowrd"
            />
        <TextView
            android:id="@+id/politica_e_privacidade"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            style="@style/privacidade"
            android:text="   Politica e privacidade"
            android:gravity="center_vertical"
            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>