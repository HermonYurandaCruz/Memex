<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComentarMeme">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:text="Hermon da Cruz "
        android:drawableEnd="@drawable/logo_mini"
        android:textSize="16sp"
        android:textColor="@color/pretoTextos"
        />







    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_UsuarioComentario"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/hermon"

        app:layout_constraintBottom_toBottomOf="@+id/et_comentario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_comentario"
    />

    <EditText
        android:id="@+id/et_comentario"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:hint="Escreva o seu comentario..."
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_UsuarioComentario"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/iv_enviarComentario"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/enviar_comentario"
        app:layout_constraintBottom_toBottomOf="@id/et_comentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_comentario" />

</androidx.constraintlayout.widget.ConstraintLayout>