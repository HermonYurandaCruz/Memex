<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <TextView
        android:id="@+id/tv_nomePerfilUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:text="Hermon Yuran da Cruz"
        android:textStyle="bold"
        android:textColor="@color/lilas3"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:drawableStart="@drawable/ic_voltar_24"


        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".NovoContratoCliente">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:src="@drawable/hermon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:civ_border_width="2dp"
                android:layout_marginTop="50dp"
                app:civ_border_color="@color/white"
                />

            <TextView
                android:id="@+id/tv_nomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Hermon Yuran da Cruz"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/foto"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_seguirPerfil"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                style="@style/BotaoFallow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_nomeUsuario"
                android:hint="Seguir"
                android:gravity="center"/>



            <TextView
                android:id="@+id/tv_biografia"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_seguirPerfil"
                android:text="Sonhos sao apenas uma mensgaem que a nossa mente tras sobre o que mais queremos..."
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/tv_seguir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="A seguir"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_numeroDePostagens"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_biografia"
                app:layout_constraintTop_toBottomOf="@id/tv_biografia" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_seguir"
                app:layout_constraintStart_toStartOf="@+id/tv_seguir"
                app:layout_constraintTop_toBottomOf="@id/tv_seguir" />


            <TextView
                android:id="@+id/tv_numeroDePostagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Posts"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_biografia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_numeroDePostagens"
                app:layout_constraintStart_toStartOf="@+id/tv_numeroDePostagens"
                app:layout_constraintTop_toBottomOf="@id/tv_numeroDePostagens" />

            <TextView
                android:id="@+id/tv_seguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Seguidores"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_biografia"
                app:layout_constraintStart_toEndOf="@id/tv_numeroDePostagens"
                app:layout_constraintTop_toBottomOf="@id/tv_biografia"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_seguidores"
                app:layout_constraintStart_toStartOf="@+id/tv_seguidores"
                app:layout_constraintTop_toBottomOf="@id/tv_seguidores" />

            <TextView
                android:id="@+id/Top3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meu Top 3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_seguir"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-condensed-medium"
                />
            <ImageView
                android:id="@+id/iv_top1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Top3"
                android:layout_margin="20dp"
                android:background="@color/lilas"
                />
            <ImageView
                android:id="@+id/iv_top2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toEndOf="@id/iv_top1"
                app:layout_constraintTop_toBottomOf="@id/Top3"
                android:layout_margin="20dp"
                android:background="@color/black"
                />
            <ImageView
                android:id="@+id/iv_top3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toEndOf="@id/iv_top2"
                app:layout_constraintTop_toBottomOf="@id/Top3"
                android:layout_margin="20dp"
                android:background="@color/amarelo3"
                />

            <ImageView
                android:id="@+id/iv_perfil_publicacao"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/foto_padrao_perfil"
                app:layout_constraintTop_toBottomOf="@id/iv_top1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="20dp"

                />

            <TextView
                android:id="@+id/tv_usuario_publicacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:text="Amana Bacar"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@id/iv_perfil_publicacao"
                app:layout_constraintTop_toBottomOf="@id/iv_top1" />


            <TextView
                android:id="@+id/tv_Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                android:text="Data: 14/09/2022   17:33H"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/publicado"
                app:layout_constraintStart_toEndOf="@id/iv_perfil_publicacao"

                />

            <View
                android:id="@+id/publicado"
                style="@style/publicacao"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_perfil_publicacao" />






        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>








